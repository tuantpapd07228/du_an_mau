<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:src="@drawable/bannerlogin21"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <Button
            android:layout_width="350dp"
            android:background="@drawable/btn_account"
            android:layout_height="wrap_content"
            android:text="Tôi đã có tài khoản"
            android:id="@+id/btnHaveAccount"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập bằng cách khác"/>
        <View
            android:layout_width="4000dp"
            android:layout_height="1dp"
            android:background="#FF0000FF" />
        <Button
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:background="@color/white"
            android:layout_height="50dp"
            android:drawableStart="@drawable/googleimg"
            android:text="Google"
            android:id="@+id/loginGoogle"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản ?"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textColor="#75BF1E"
                android:id="@+id/btnReg"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>