<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#E2EFE2"
    android:layout_marginVertical="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID hóa đơn   "
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hoadonouteridhoadon"
            android:text="562326565"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày mua"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023/05/01"
                android:paddingLeft="10dp"
                android:id="@+id/hoadonouterngaymua"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:id="@+id/hoadonouterrecycleview"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Phí vận chuyển 30000d"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="Tổng tiền"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000000000"
                android:gravity="right"
                android:paddingRight="10dp"
                android:id="@+id/hoadonoutertongtien"
                android:textColor="@color/red"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/holo_orange_light"
            android:text="Hủy"
            android:id="@+id/hoadonoutercancel"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="10dp"
            android:text="hoan thanh"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/hoadonoutertrangthai"/>
    </LinearLayout>
</LinearLayout>